<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/hcinterfacegopageinvisiblewall"
    android:orientation="vertical"
    tools:context=".LinearLayout" >

     <TextView
         android:id="@+id/invisibleWallplayfragtext1"
         android:layout_width="270dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="272dp"
         android:gravity="center"
         android:lines="2"
         android:text="@string/invisibleWallplayfragtext1"
         android:textColor="@color/white"
         android:textSize="17sp" />

<TextView
    android:id="@+id/invisibleWallplayfragtext2"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="28dp"
    android:gravity="center"
    android:lines="2"
    android:text="@string/invisibleWallplayfragtext2"
    android:textColor="@color/white"
    android:textSize="17sp" />

    <Button
        android:id="@+id/invisibleWallplaybtn"
        android:layout_width="100dp"
        android:layout_height="112dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp"
        android:background="@drawable/hcinterfacebtnplay" />

</LinearLayout>