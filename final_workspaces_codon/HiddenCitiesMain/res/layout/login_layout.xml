<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/hclogin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:showDividers="middle"
    tools:context="com.example.hiddencitieslogin.HiddenCitiesLogin" 
    android:id="@+id/loginLayoutContainer">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="176dp"
        android:text="@string/WelcomeTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:lines="2" />

    <TextView
        android:id="@+id/enterDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/enterEmail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nameEntry"
        android:layout_width="280dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rect_text_edit"
        android:hint="@string/namehint"
        android:includeFontPadding="true"
        android:inputType="text"
        android:lines="1"
        android:paddingStart="5dp"
        android:paddingEnd="1dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/textinput" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/emailEntry"
        android:layout_width="280dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_text_edit"
        android:hint="@string/emailhint"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:paddingEnd="1dp"
        android:textColor="@color/textinput" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:background="@drawable/hcwelcomebutton"
        android:onClick="login" />

</LinearLayout>